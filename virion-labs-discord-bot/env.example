# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_bot_client_id_here

# Discord Server Configuration (Required for security)
# Primary Discord server ID where the bot operates
DISCORD_GUILD_ID=your_primary_discord_server_id_here

# Channel where the /start command is allowed (REQUIRED for /start command)
# Users can only use /start in this specific channel for security
DISCORD_JOIN_CAMPAIGNS_CHANNEL_ID=your_campaigns_channel_id_here

# Role required to use /start command (REQUIRED for /start command)
# Users must have this "Verified" role to access /start command
DISCORD_VERIFIED_ROLE_ID=your_verified_role_id_here

# Request Access Configuration
# Channel where users can request access to private channels
DISCORD_REQUEST_ACCESS_CHANNEL_ID=your_request_access_channel_id_here

# Dashboard API Configuration
DASHBOARD_API_URL=http://localhost:3000/api
DASHBOARD_API_KEY=your_internal_api_key_here

# Debug mode (set to 'true' for detailed logging)
DEBUG=false

# HTTP Server Configuration (for webhook handling)
BOT_HTTP_PORT=3001

# Optional: Custom bot settings
BOT_NAME=Virion Labs Discord Bot
BOT_VERSION=1.0.0 