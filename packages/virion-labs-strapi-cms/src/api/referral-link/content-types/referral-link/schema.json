{
  "kind": "collectionType",
  "collectionName": "referral_links",
  "info": {
    "singularName": "referral-link",
    "pluralName": "referral-links",
    "displayName": "Referral Link",
    "description": "Represents a trackable referral link for a campaign."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "platform": {
      "type": "enumeration",
      "enum": [
        "YouTube",
        "Instagram",
        "TikTok",
        "Twitter",
        "Facebook",
        "LinkedIn",
        "Other"
      ],
      "required": true
    },
    "originalUrl": {
      "type": "string",
      "required": true
    },
    "referralCode": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "referralUrl": {
      "type": "string",
      "required": true
    },
    "thumbnailUrl": {
      "type": "string"
    },
    "clicks": {
      "type": "integer",
      "default": 0
    },
    "earnings": {
      "type": "decimal",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "expiresAt": {
      "type": "datetime"
    },
    "discordInviteUrl": {
      "type": "string"
    },
    "discordGuildId": {
      "type": "string"
    },
    "redirectToDiscord": {
      "type": "boolean",
      "default": false
    },
    "landingPageEnabled": {
      "type": "boolean",
      "default": true
    },
    "conversions": {
      "type": "integer",
      "default": 0
    },
    "lastConversionAt": {
      "type": "datetime"
    },
    "privateChannelId": {
      "type": "string"
    },
    "accessRoleId": {
      "type": "string"
    },
    "customInviteCode": {
      "type": "string"
    },
    "metadata": {
      "type": "json"
    },
    "conversionRate": {
      "type": "decimal"
    },
    "campaign": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::campaign.campaign"
    },
    "influencer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::user-profile.user-profile"
    }
  }
}
