{
  "kind": "collectionType",
  "collectionName": "user_settings",
  "info": {
    "singularName": "user-setting",
    "pluralName": "user-settings",
    "displayName": "User Settings",
    "description": "Stores detailed settings for a user."
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "bio": {
      "type": "text"
    },
    "phoneNumber": {
      "type": "string"
    },
    "twitterHandle": {
      "type": "string"
    },
    "instagramHandle": {
      "type": "string"
    },
    "youtubeChannel": {
      "type": "string"
    },
    "discordUsername": {
      "type": "string"
    },
    "websiteUrl": {
      "type": "string"
    },
    "emailNotificationsNewReferral": {
      "type": "boolean",
      "default": true
    },
    "emailNotificationsLinkClicks": {
      "type": "boolean",
      "default": false
    },
    "emailNotificationsWeeklyReports": {
      "type": "boolean",
      "default": true
    },
    "emailNotificationsProductUpdates": {
      "type": "boolean",
      "default": true
    },
    "profileVisibility": {
      "type": "enumeration",
      "enum": [
        "public",
        "private",
        "contacts_only"
      ],
      "default": "public"
    },
    "theme": {
      "type": "enumeration",
      "enum": [
        "light",
        "dark",
        "system"
      ],
      "default": "system"
    },
    "language": {
      "type": "string",
      "default": "en"
    },
    "timezone": {
      "type": "string",
      "default": "UTC"
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "twoFactorEnabled": {
      "type": "boolean",
      "default": false
    },
    "user_profile": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::user-profile.user-profile"
    }
  }
}
