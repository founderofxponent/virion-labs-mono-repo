{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "singularName": "campaign",
    "pluralName": "campaigns",
    "displayName": "Campaign",
    "description": "Represents a marketing campaign within a Discord guild."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "guildId": {
      "type": "string",
      "required": true
    },
    "channelId": {
      "type": "string"
    },
    "campaignName": {
      "type": "string",
      "required": true
    },
    "campaignType": {
      "type": "enumeration",
      "enum": [
        "referral_onboarding",
        "product_promotion",
        "community_engagement",
        "support",
        "custom",
        "vip_support"
      ],
      "required": true
    },
    "webhookUrl": {
      "type": "string"
    },
    "welcomeMessage": {
      "type": "text"
    },
    "onboardingFlow": {
      "type": "json"
    },
    "referralTrackingEnabled": {
      "type": "boolean",
      "default": true
    },
    "autoRoleAssignment": {
      "type": "boolean",
      "default": false
    },
    "totalInteractions": {
      "type": "integer",
      "default": 0
    },
    "successfulOnboardings": {
      "type": "integer",
      "default": 0
    },
    "referralConversions": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "campaignStartDate": {
      "type": "datetime"
    },
    "campaignEndDate": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json"
    },
    "botName": {
      "type": "string",
      "default": "Virion Bot"
    },
    "botAvatarUrl": {
      "type": "string"
    },
    "botPersonality": {
      "type": "string",
      "default": "helpful"
    },
    "botResponseStyle": {
      "type": "string",
      "default": "friendly"
    },
    "brandColor": {
      "type": "string",
      "default": "#6366f1"
    },
    "brandLogoUrl": {
      "type": "string"
    },
    "customCommands": {
      "type": "json"
    },
    "autoResponses": {
      "type": "json"
    },
    "rateLimitPerUser": {
      "type": "integer",
      "default": 5
    },
    "allowedChannels": {
      "type": "json"
    },
    "blockedUsers": {
      "type": "json"
    },
    "moderationEnabled": {
      "type": "boolean",
      "default": true
    },
    "contentFilters": {
      "type": "json"
    },
    "template": {
      "type": "enumeration",
      "enum": [
        "standard",
        "advanced",
        "custom",
        "referral_campaign",
        "support_campaign"
      ]
    },
    "prefix": {
      "type": "string",
      "default": "!"
    },
    "description": {
      "type": "text"
    },
    "avatarUrl": {
      "type": "string"
    },
    "features": {
      "type": "json"
    },
    "responseTemplates": {
      "type": "json"
    },
    "embedFooter": {
      "type": "text"
    },
    "webhookRoutes": {
      "type": "json"
    },
    "apiEndpoints": {
      "type": "json"
    },
    "externalIntegrations": {
      "type": "json"
    },
    "configurationVersion": {
      "type": "integer",
      "default": 2
    },
    "commandsUsed": {
      "type": "integer",
      "default": 0
    },
    "usersServed": {
      "type": "integer",
      "default": 0
    },
    "lastActivityAt": {
      "type": "datetime"
    },
    "privateChannelId": {
      "type": "string"
    },
    "accessControlEnabled": {
      "type": "boolean",
      "default": false
    },
    "referralOnlyAccess": {
      "type": "boolean",
      "default": false
    },
    "onboardingChannelType": {
      "type": "string",
      "default": "channel"
    },
    "onboardingCompletionRequirements": {
      "type": "json"
    },
    "privateChannelSetup": {
      "type": "json"
    },
    "targetRoleIds": {
      "type": "json"
    },
    "pausedAt": {
      "type": "datetime"
    },
    "isDeleted": {
      "type": "boolean",
      "default": false
    },
    "deletedAt": {
      "type": "datetime"
    },
    "client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::client.client",
      "inversedBy": "campaigns"
    }
  }
}
