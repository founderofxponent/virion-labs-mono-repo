{
  "kind": "collectionType",
  "collectionName": "user_profiles",
  "info": {
    "singularName": "user-profile",
    "pluralName": "user-profiles",
    "displayName": "User Profile",
    "description": "Stores user profile information."
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "fullName": {
      "type": "string",
      "required": true
    },
    "avatarUrl": {
      "type": "string"
    },
    "role": {
      "type": "enumeration",
      "enum": [
        "influencer",
        "admin",
        "client"
      ],
      "required": true,
      "default": "influencer"
    }
  }
}
