{
  "kind": "collectionType",
  "collectionName": "clients",
  "info": {
    "singularName": "client",
    "pluralName": "clients",
    "displayName": "Client",
    "description": "Represents a client or brand running campaigns."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "industry": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "string"
    },
    "influencers": {
      "type": "integer",
      "default": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Active",
        "Inactive",
        "Pending"
      ],
      "required": true,
      "default": "Active"
    },
    "joinDate": {
      "type": "date",
      "required": true
    },
    "website": {
      "type": "string"
    },
    "primaryContact": {
      "type": "string"
    },
    "contactEmail": {
      "type": "email"
    },
    "campaigns": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::campaign.campaign",
      "mappedBy": "client"
    }
  }
}
