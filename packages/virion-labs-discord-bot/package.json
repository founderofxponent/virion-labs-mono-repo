{
  "name": "virion-labs-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for server management and campaign handling",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "test": "echo \"No tests specified\"",
    "deploy:gcloud": "dotenv -e .env.production -- gcloud run deploy virion-discord-bot --image=gcr.io/$PROJECT_ID/virion-discord-bot:latest --region=us-central1 --platform=managed --memory=512Mi --cpu=1 --max-instances=10 --min-instances=1 --timeout=300 --set-env-vars=\"NODE_ENV=$NODE_ENV,DISCORD_BOT_TOKEN=$DISCORD_BOT_TOKEN,DISCORD_CLIENT_ID=$DISCORD_CLIENT_ID,DISCORD_CLIENT_SECRET=$DISCORD_CLIENT_SECRET,DISCORD_GUILD_ID=$DISCORD_GUILD_ID,DISCORD_JOIN_CAMPAIGNS_CHANNEL_ID=$DISCORD_JOIN_CAMPAIGNS_CHANNEL_ID,DISCORD_REQUEST_ACCESS_CHANNEL_ID=$DISCORD_REQUEST_ACCESS_CHANNEL_ID,DISCORD_VERIFIED_ROLE_ID=$DISCORD_VERIFIED_ROLE_ID,DASHBOARD_API_URL=$DASHBOARD_API_URL,WEBHOOK_PORT=$WEBHOOK_PORT,DEBUG=$DEBUG\"",
    "pm2:start": "pm2 start src/index.js --name virion-discord-bot",
    "pm2:stop": "pm2 stop virion-discord-bot",
    "pm2:restart": "pm2 restart virion-discord-bot",
    "pm2:logs": "pm2 logs virion-discord-bot",
    "docker:build": "docker build -t virion-discord-bot .",
    "docker:run": "docker run -d --name virion-discord-bot --env-file .env virion-discord-bot",
    "docker:stop": "docker stop virion-discord-bot && docker rm virion-discord-bot",
    "switch-env": "node scripts/switch-environment.js",
    "env:dev": "node scripts/switch-environment.js dev",
    "env:prod": "node scripts/switch-environment.js prod",
    "env:status": "node scripts/switch-environment.js status",
    "env:init": "node scripts/switch-environment.js init"
  },
  "keywords": [
    "discord",
    "bot",
    "server-management",
    "campaigns",
    "onboarding",
    "virion-labs"
  ],
  "author": "Virion Labs",
  "license": "MIT",
  "dependencies": {
    "@discordjs/rest": "^2.3.0",
    "axios": "^1.7.2",
    "discord-api-types": "^0.37.91",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-cache": "^5.1.2",
    "@supabase/supabase-js": "^2.48.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/virion-labs-discord-bot.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/virion-labs-discord-bot/issues"
  },
  "homepage": "https://github.com/your-username/virion-labs-discord-bot#readme"
}
