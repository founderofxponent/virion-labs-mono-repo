{
  "name": "virion-labs-monorepo",
  "version": "1.0.0",
  "description": "Virion Labs Monorepo - Dashboard and Discord Bot",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "py:install": "uv venv && source .venv/bin/activate && uv pip sync packages/api/pyproject.toml && uv pip sync packages/mcp-server/pyproject.toml",
    "dashboard:build": "yarn workspace virion-labs-dashboard build",
    "dashboard:dev": "yarn workspace virion-labs-dashboard dev",
    "bot:dev": "yarn workspace virion-labs-discord-bot dev",
    "bot:start": "yarn workspace virion-labs-discord-bot start",
    "start:all": "concurrently \"yarn dashboard:dev\" \"yarn bot:start\"",
    "test:dashboard": "yarn workspace virion-labs-dashboard test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "virion-labs",
    "dashboard",
    "discord-bot",
    "monorepo",
    "supabase",
    "campaign-management"
  ],
  "author": "Virion Labs",
  "license": "MIT"
}
