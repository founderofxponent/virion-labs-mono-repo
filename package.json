{
  "name": "virion-labs-monorepo",
  "version": "1.0.0",
  "description": "Virion Labs - Dashboard, Discord Bot, and Strapi CMS",
  "scripts": {
    "py:install": "uv venv && source .venv/bin/activate && uv pip sync packages/api/pyproject.toml && uv pip sync packages/mcp-server/pyproject.toml",
    "dashboard:build": "cd packages/virion-labs-dashboard && yarn build",
    "dashboard:dev": "cd packages/virion-labs-dashboard && yarn dev",
    "strapi:dev": "cd packages/virion-labs-strapi-cms && yarn develop",
    "strapi:build": "cd packages/virion-labs-strapi-cms && yarn build",
    "bot:dev": "cd packages/virion-labs-discord-bot && yarn dev",
    "bot:start": "cd packages/virion-labs-discord-bot && yarn start",
    "start:all": "concurrently \"yarn dashboard:dev\" \"yarn bot:start\"",
    "test:dashboard": "cd packages/virion-labs-dashboard && yarn test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "virion-labs",
    "dashboard",
    "discord-bot",
    "monorepo",
    "supabase",
    "campaign-management"
  ],
  "author": "Virion Labs",
  "license": "MIT",
  "dependencies": {
    "@strapi/strapi": "^5.19.0"
  }
}
